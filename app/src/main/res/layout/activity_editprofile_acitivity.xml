<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_editprofile_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a51202_000.testbug.EditprofileAcitivity">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/username_label"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/profile_ic_account"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nhập tên"
                        android:ems="10"
                        android:id="@+id/txtEditUserName"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/username_label"
                        android:layout_toEndOf="@+id/username_label" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/phonelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/profile_ic_phone"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nhập số điện thoại"
                        android:ems="10"
                        android:id="@+id/txtEditPhone"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/phonelabel"
                        android:layout_toEndOf="@+id/phonelabel" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/birthdaylabel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/profile_ic_birthday"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nhập ngày sinh"
                        android:ems="10"
                        android:id="@+id/txtEditBrirthday"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/birthdaylabel"
                        android:layout_toEndOf="@+id/birthdaylabel" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/addresslabel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/profile_ic_address"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nhập địa chỉ"
                        android:ems="10"
                        android:id="@+id/txtEditAdress"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/addresslabel"
                        android:layout_toEndOf="@+id/addresslabel" />

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txtvShowPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thay đổi mật khẩu"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:textColor="#e70b04"
                />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/passwordlayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingLeft="20dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/passwordlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_password"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="Nhập mật khẩu"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/txtEditPass"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/passwordlabel"
                        android:layout_toEndOf="@+id/passwordlabel" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:id="@+id/repasswordlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_password"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text=""
                        android:hint="Nhập lại mật khẩu"
                        android:ems="10"
                        android:id="@+id/txtEditRePass"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/repasswordlabel"
                        android:layout_toEndOf="@+id/repasswordlabel" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1"
                android:layout_weight="0.85">

                <at.markushi.ui.CircleButton
                    android:id="@+id/btnEditOk"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    app:cb_color="#99CC00"
                    android:src="@drawable/add_event_ic_tick"
                    app:cb_pressedRingWidth="8dip" />
                <at.markushi.ui.CircleButton
                    android:id="@+id/btnEditCancel"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    app:cb_color="@color/primary_darker"
                    android:src="@drawable/add_event_ic_cancel"
                    app:cb_pressedRingWidth="8dip" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

