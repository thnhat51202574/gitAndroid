<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_margin="5dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/event_date1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/WhiteColor"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="TUE"
            android:layout_weight="0.26" />
        <TextView
            android:id="@+id/event_date2"
            android:background="#fff"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="31"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="@color/itemtitle"
            android:gravity="top"
            android:textStyle="bold"
            android:text="Phượt Nha Trang FC team"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/event_date_start_label"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_alarm"
            />
            <TextView
                android:id="@+id/event_time_start"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/datecolor"
                android:gravity="top"
                android:text="07:10"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_event_start_24dp"
                />
            <TextView
                android:id="@+id/event_date_start"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/datecolor"
                android:gravity="top"
                android:text="05/02"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@drawable/ic_directions_bike"
                />
            <TextView
                android:id="@+id/event_num_member"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/datecolor"
                android:gravity="top"
                android:text="20"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_gravity="center"
        android:layout_alignParentRight = "true"
        android:layout_marginRight="5dp"
        android:background="@drawable/edit_event_btn"
        android:visibility="gone"
        >
        <ImageButton
            android:id="@+id/event_edit_btn"
            android:background="@drawable/ic_edit_event"
            android:layout_width="15dip"
            android:layout_height="15dip" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="6dp"
        android:layout_alignParentRight ="true"
        android:gravity="center|right"
        >
        <at.markushi.ui.CircleButton
            android:id="@+id/event_delete_btn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            app:cb_color="#c1c1c0"
            android:src="@drawable/ic_delele_event"
            app:cb_pressedRingWidth="8dip" />

    </LinearLayout>
</RelativeLayout>

