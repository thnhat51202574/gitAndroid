<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:weightSum="1">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noavatar"
            app:civ_border_color="#41ce28"
            app:civ_border_width="0dp"
            android:id="@+id/frient_avatar"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/friend_name"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:textColor="@color/jet"
            android:gravity="top"
            android:text="Hoàng Nhật"
            android:textSize="15sp"/>
        <com.dd.CircularProgressButton
            android:id="@+id/circularButton2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight = "true"
            android:textColor="@color/WhiteColor"
            android:textSize="13sp"
            app:cpb_cornerRadius="48dp"
            app:cpb_iconComplete="@drawable/add_event_ic_tick"
            app:cpb_iconError="@drawable/add_event_ic_cancel"
            app:cpb_textIdle="Thêm bạn" />

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="35dp"-->
            <!--android:id="@+id/AddfriendBtn"-->
            <!--android:text="Thêm bạn"-->
            <!--android:textAllCaps="false"-->
            <!--android:textSize="13dp"-->
            <!--android:textColor="@drawable/textaddfriendbtn"-->
            <!--android:layout_alignParentRight = "true"-->
            <!--android:background="@drawable/addfriendbtn"-->
            <!--android:theme="@style/WeGoCheckbox"-->
            <!--android:layout_weight="0.5" />-->

    </LinearLayout>

</LinearLayout>